@model book_shop.Models.Book

@{
    ViewBag.Title = "SetAuthor";
    var auths = ViewData["Auths"] as List<book_shop.Models.Author>;
}

<h2>SetAuthor</h2>

<div>
    <h4>Book</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

    </dl>
</div>
<div>
    <h4>Author</h4>
    <table>
        <tr>
            <th>Author Name</th>
            <th>Action</th>
        </tr>
        @foreach (var anau in auths)
        {
            <tr>
                <td>@Html.DisplayFor(model => anau.Name)</td>
                <td>@Html.ActionLink("Add", "AddAuthor", "Books", new { id = Model.Bid, auid = anau.Id }, null)</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Bid }) |
    @Html.ActionLink("Back to List", "Index")
</p>

